FLASK_APP=garage_manager.app:create_app

# اتركها فارغة للمحلي. في الإنتاج عيّنها إلى production
FLASK_ENV=
DEBUG=

SECRET_KEY=
CARD_ENC_KEY=
PERMISSIONS_REQUIRE_ALL=False

# اتركه فارغًا للمحلي (سيستخدم SQLite داخل instance/ تلقائيًا)
DATABASE_URL=

# اختياري: Redis/Celery/Socket.IO. اتركه فارغًا إن لم تستخدمه
REDIS_URL=
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
SOCKETIO_MESSAGE_QUEUE=${REDIS_URL}

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER="Garage Manager <notifications@yourdomain.com>"

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

HOST=0.0.0.0
PORT=8000

WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# يمكن أن تكون "*" أو قائمة مفصولة بفواصل لمجالات محددة
CORS_ORIGINS=*

RATELIMIT_DEFAULT=200 per day;50 per hour

SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.0

LOG_LEVEL=INFO
DEFAULT_PRODUCT_IMAGE=products/default.png
ALLOW_SEED_ROLES=1

SUPER_USER_EMAILS=
ADMIN_USER_EMAILS=

SUPER_ADMIN_USERNAME=azad
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=AZ123456

ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin#12345

STAFF_USERNAME=staff
STAFF_EMAIL=staff@example.com
STAFF_PASSWORD=Staff#12345

MECHANIC_USERNAME=mechanic
MECHANIC_EMAIL=mechanic@example.com
MECHANIC_PASSWORD=Mechanic#12345

REGISTERED_CUSTOMER_USERNAME=customer
REGISTERED_CUSTOMER_EMAIL=customer@example.com
REGISTERED_CUSTOMER_PASSWORD=Customer#12345

DEFAULT_CURRENCY=ILS

GL_AUTO_POST_ON_EXCHANGE=true
GL_EXCHANGE_INV_ACCOUNT=1205_INV_EXCHANGE
GL_EXCHANGE_COGS_ACCOUNT=5105_COGS_EXCHANGE
GL_EXCHANGE_AP_ACCOUNT=2000_AP

# تشغيل النسخ الاحتياطي التلقائي (يعمل للمحلي والإنتاج مع SQLite)
AUTO_DB_BACKUP=true
